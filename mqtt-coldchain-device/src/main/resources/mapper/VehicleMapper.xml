<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.coldchain.device.mapper.VehicleMapper">

    <resultMap id="VehicleResultMap" type="com.coldchain.device.entity.Vehicle">
        <id property="id" column="id"/>
        <result property="vehicleId" column="vehicle_id"/>
        <result property="vehicleName" column="vehicle_name"/>
        <result property="corpId" column="corp_id"/>
        <result property="status" column="status"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <select id="selectByVehicleId" resultMap="VehicleResultMap">
        SELECT id, vehicle_id, vehicle_name, corp_id, status, created_at, updated_at
        FROM vehicle
        WHERE vehicle_id = #{vehicleId}
    </select>

    <insert id="insert" parameterType="com.coldchain.device.entity.Vehicle" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO vehicle (vehicle_id, vehicle_name, corp_id, status, created_at, updated_at)
        VALUES (#{vehicleId}, #{vehicleName}, #{corpId}, #{status}, NOW(), NOW())
    </insert>

    <update id="update" parameterType="com.coldchain.device.entity.Vehicle">
        UPDATE vehicle
        <set>
            <if test="vehicleName != null">vehicle_name = #{vehicleName},</if>
            <if test="status != null">status = #{status},</if>
            updated_at = NOW()
        </set>
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM vehicle WHERE id = #{id}
    </delete>

</mapper>
